<div id='list-selection'>
	<% if @my_baby_lists.size > 0 %>
	<div>
		<h2>Choose an existing baby list to start ranking:</h2>
		<select id="existing-lists">
			<% @my_baby_lists.each do |bl| %>
				<option value="<%= bl.id %>">
					<%= bl.name %>
				</option>
			<% end %>
		</select>
		<input type="submit" value="Start Ranking" id='start-ranking'>
	</div>
	<% end %>
	<% if @public_baby_lists.size > 0 %>
	<div>
		<h2>Choose an existing baby list to duplicate into a new list:</h2>
		<select id="duplicate-list">
			<% @public_baby_lists.each do |bl| %>
				<option value="<%= bl.id %>">
					<%= bl.name %>
				</option>
			<% end %>
		</select>
		<p>
			New Name: <input type='text' id='new-name' />
			<input type="submit" value="Duplicate" id='duplicate'>
		</p>
	</div>
	<% end %>
	<div>
		<h2>Paste a new list of names to create (comma or line separated):</h2>
		<p>
			List Name: <input type='text' id='upload-new-name' />
		</p>
		<textarea id="name-list-field" cols="30" rows="30">Paste list here</textarea>
		<p>
			<input type="checkbox" value="cloneable" id="new-list-cloneable" />
			Allow the names on the list to be copied by other users into their own list
		</p>
		<p>
			<input type="submit" value="Upload" id='upload'>
		</p>
	</div>
</div>
<div id='name-choice' style="display: none;">
	<h1 id="list-title"></h1>
	<h2>Do you prefer:</h2>
	<div class="floatLeft nameBlock" id='name1'>
		None
	</div>
	<div class="floatLeft nameBlock" id='name2'>
		None
	</div>
	<div class="floatLeft nameBlock" id='same'>
		Same
	</div>
	<br class="clearFloat" />
	<div class="floatLeft removeNameBlock">
		<input type="checkbox" value="remove1" id="remove-1-checkbox" />
	</div>
	<div class="floatLeft removeNameBlock">
		<input type="checkbox" value="remove2" id="remove-2-checkbox" />
	</div>
	<div class="floatLeft removeNameBlock">
	<input type="submit" value="Delete Checked" id='delete-checked'>
	</div>
	<br class="clearFloat" />
	<input type="submit" value="Display Current Results" id='display-results'>
	<input type="submit" value="Back to List Select" class='back-to-list-select'>
	<div id='invite-voter' style="display: none;">
		<p>
			Invite Voter by Email: <input type='text' id='invite-email' />
		</p>
		<input type="submit" value="Invite Voter" id='invite-voter-button'>
	</div>
</div>
<div id="results" style="display: none;">
	<h2>Results so far:</h2>
	<div id="results-html"></div>
	<input type="submit" value="Back to Choices" class='back-to-choices'>
	<input type="submit" value="Back to List Select" class='back-to-list-select'>
</div>
<script>
	$("#start-ranking").click(startRanking);
	$("#duplicate").click(duplicate);
	$("#display-results").click(displayResults);
	$("#name1").click(clickedOne);
	$("#name2").click(clickedTwo);
	$("#same").click(choseTie);
	$(".back-to-choices").click(backToChoices);
	$(".back-to-list-select").click(backToListSelect);
	$("#upload").click(uploadList);
	$("#invite-voter-button").click(inviteVoter);
	$("#delete-checked").click(deleteChecked);
</script>
